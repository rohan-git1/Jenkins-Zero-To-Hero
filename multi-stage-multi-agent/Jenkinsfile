pipeline {
  agent {
    docker {
      image 'node:16-alpine'
      args '-p 3000:3000' // Maps container port to host port
    }
  }
  stages {
    stage('Install') {
      steps {
        sh 'npm install'
      }
    }
    stage('Start Server') {
      steps {
        sh 'npm start'
      }
    }
    stage('Checkout') {
  steps {
    checkout scm
  }
}
  }
}
